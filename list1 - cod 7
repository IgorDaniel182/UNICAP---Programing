//Escreva um programa que leia trÃªs valores inteiros e diferentes e mostre-os em ordem crescente.
programa {


funcao inicio()
{
    real a, b, c, maior, meio, menor


    escreva("Digite o primeiro numero: ")
    leia(a)
    escreva("Digite o segundo numero: ")
    leia(b)
    escreva("Digite o terceiro numero: ")
    leia(c)


    se(a>b e b>c){
        maior = a
        meio = b
        menor = c
    }




         senao se(a>c e c>b){
         maior = a
         meio = c
         menor = b
    }




        senao se(b>a e a>c){
         maior = b
         meio = a
         menor = c
         }




        senao se(b>c e c>a){
         maior = b
         meio = c
         menor = a
         }




          senao se(c>a e a>b){
         maior = c
         meio = a
         menor = b
         }


     senao se(c>b e b>a){
         maior = c
         meio = b
         menor = a
         }


       escreva("\n----------- \nmenor = ", menor)
       escreva("\nmeio = ", meio)
       escreva("\nmaior = ", maior)


}
}
