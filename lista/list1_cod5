//Escreva um programa que lê dois valores booleanos (lógicos) e então determina se ambos são VERDADEIROS ou FALSOS.
programa {
  funcao inicio() {
    cadeia idade,male
    escreva("Você é maior de idade? (sim|nao) ")
    leia(idade)
    escreva("Você é do sexo masculino? (sim|nao) ")
    leia(male)
    se(idade == "sim" e male == "sim"){
      escreva("Você deverá se apresentar no exército!, (afirmmativo)")
     }se senao( idade == "sim" e male == "nao"){
      escreva("Apresentação não obrigatória!, (negativo)")
     }
  }
}
